{
  "name": "course-work",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "dal",
    "bll",
    "pl",
    "tests"
  ],
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . — fix && prettier — write .",
    "prepare": "lint-staged",
    "start": "bun run --cwd ./pl src/index.ts",
