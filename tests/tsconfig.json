{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "course-work-bll": ["bll/src/index.ts"],
      "course-work-bll/*": ["bll/src/*"],
      "course-work-dal": ["dal/src/index.ts"],
      "course-work-dal/*": ["dal/src/*"],
      "src/*": ["bll/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../bll/src/**/*.ts", "../dal/src/**/*.ts"]
}
